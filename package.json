{
    "name": "auto-set-syntax",
    "displayName": "Auto Set Syntax",
    "description": "Auto Set file languageId/syntax based on first line content",
    "version": "0.0.2",
    "publisher": "ctf0",
    "license": "MIT",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/index",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Auto Set Syntax",
            "properties": {
                "auto_set_syntax.syntax_mapping": {
                    "type": "array",
                    "default": [
                        {
                            "first_line_pattern": "<?php",
                            "languageId": "php"
                        }
                    ],
                    "uniqueItems": true,
                    "items": {
                        "type": "object",
                        "title": "Syntax Mapping",
                        "properties": {
                            "first_line_pattern": {
                                "type": "string",
                                "description": "first line pattern ex.<?php"
                            },
                            "languageId": {
                                "type": "string",
                                "description": "languageId ex.php"
                            }
                        }
                    },
                    "description": "first line pattern & its corresponding languageId/syntax"
                }
            }
        }
    },
    "repository": "https://github.com/ctf0/vscode-auto-set-syntax",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/extend": "^3.0.1",
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.48",
        "tslint": "^5.16.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.34"
    },
    "dependencies": {
        "escape-string-regexp": "^2.0.0"
    }
}
